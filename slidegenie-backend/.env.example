# SlideGenie Backend Configuration Example
# Copy this file to .env and fill in your values

# ========================================
# ESSENTIAL SETTINGS (Required to run)
# ========================================

# Application Settings
APP_NAME=SlideGenie
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Settings
API_V1_PREFIX=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Security (REQUIRED - Generate a strong secret key for production!)
SECRET_KEY=your-secret-key-here-change-in-production-at-least-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database (REQUIRED - App cannot function without PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=slidegenie
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=slidegenie
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# AI API Keys (REQUIRED - At least ONE must be configured)
# Get your API keys from:
# OpenAI: https://platform.openai.com/api-keys
# Anthropic: https://console.anthropic.com/
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# AI Budget Limits (Optional - defaults shown)
AI_BUDGET_OPENAI=500.0     # Monthly budget in USD
AI_BUDGET_ANTHROPIC=1000.0  # Monthly budget in USD
AI_CACHE_ENABLED=true       # Enable response caching (7 days)

# ========================================
# RECOMMENDED SETTINGS (For full features)
# ========================================

# Redis (RECOMMENDED - Required for caching, rate limiting, real-time features)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# Supabase Storage (RECOMMENDED - Required for file uploads/exports)
# Get your Supabase credentials from: https://app.supabase.com/
SUPABASE_URL=https://xxxxxxxxxxxxxxxxxxxx.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-key
SUPABASE_STORAGE_BUCKET=documents

# ========================================
# OPTIONAL SETTINGS (Nice to have)
# ========================================

# OAuth Providers (Optional - For social login)
# Google: https://console.cloud.google.com/
# Microsoft: https://portal.azure.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# Email Settings (Optional - For email verification/password reset)
# Can use services like SendGrid, AWS SES, or Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@slidegenie.com
SMTP_FROM_NAME=SlideGenie
SMTP_TLS=true

# Error Tracking (Optional - For production monitoring)
# Get your DSN from: https://sentry.io/
SENTRY_DSN=
SENTRY_ENVIRONMENT=${ENVIRONMENT}
SENTRY_TRACES_SAMPLE_RATE=0.1

# Metrics (Optional - Prometheus metrics are implemented)
PROMETHEUS_ENABLED=false
METRICS_PORT=9090

# Background Tasks (Optional - Infrastructure exists but not fully configured)
CELERY_BROKER_URL=redis://${REDIS_HOST}:${REDIS_PORT}/1
CELERY_RESULT_BACKEND=redis://${REDIS_HOST}:${REDIS_PORT}/2

# ========================================
# APPLICATION LIMITS
# ========================================

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# File Upload
MAX_UPLOAD_SIZE_MB=50
ALLOWED_UPLOAD_EXTENSIONS=["pdf","docx","doc","pptx","ppt","tex","txt"]

# Export Settings
EXPORT_TIMEOUT_SECONDS=300
MAX_CONCURRENT_EXPORTS=5